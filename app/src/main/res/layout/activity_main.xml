<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apple.week7_db.MainActivity">

    <EditText
        android:id="@+id/editTextAddPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextAddName"
        android:layout_x="5dp"
        android:layout_y="60dp"
        android:ems="10"
        android:hint="Phone number"
        android:inputType="phone"
        android:maxLength="12"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_x="9dp"
        android:layout_y="15dp"
        app:srcCompat="@drawable/ic_person" />

    <EditText
        android:id="@+id/editTextAddName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_x="1dp"
        android:layout_y="0dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/editTextAddSarary"
        android:layout_x="18dp"
        android:layout_y="137dp"
        app:srcCompat="@drawable/ic_attach_money" />

    <EditText
        android:id="@+id/editTextAddSarary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextAddPhone"
        android:layout_x="8dp"
        android:layout_y="111dp"
        android:ems="10"
        android:hint="Salary"
        android:inputType="number"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextAddName"
        android:layout_x="7dp"
        android:layout_y="69dp"
        app:srcCompat="@drawable/ic_phone" />

    <ListView
        android:id="@+id/ListView1"
        android:layout_width="match_parent"
        android:layout_height="289dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/butAdd"
        android:layout_y="222dp"
        android:paddingBottom="50dp"
        android:paddingLeft="30px" />

    <Button
        android:id="@+id/butAdd"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextAddSarary"
        android:layout_x="25dp"
        android:layout_y="164dp"
        android:text="Add a new row"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="123dp" />

</AbsoluteLayout>
